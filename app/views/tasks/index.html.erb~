<%= form_for(@task) do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :a_size %><br />
    <%= f.text_field :a_size %>
  </div>
  <div class="field">
    <%#= f.label :a_element %><br />
    <%#= f.text_field :a_element %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
